<% @title="Search"; @style="result" %>
<div class="inner-wrapper">
    <div class="recent">
        <div class="filtery">
            <%= form_tag filter_sku_url do %>
            <input type="text" name="sku" placeholder="ZTMZNNY6AGP3" value="<%= @partial %>">
            <%= submit_tag "Search" %>
            <% end %>
        </div>
        <br>
        <% if @sorted.count != 0 %>
        <table class="recent">
            <tr>
                <td class="table-header">SKU</td>
                <td class="table-header">Model</td>
                <td class="table-header">Brand</td>
            </tr>
            <% @skus.take(5).each do |sku| %>
            <%  @json = sku.values[0] %>
            <% @skuID = sku.keys[0] %>

            <tr onclick="window.document.location='<%=url_for(controller: 'result', action: 'load', sku: @skuID) %>';">
                <td class='barcode'>

                    <div class='barcode'><%= base64_image(generateBarcode(@skuID))  %>
                        <p><%= @skuID %></p>
                    </div>
                </td>
                <td class="model"><%=  @json["Model"] %>
                </td>
                <td class='brand'><%=  @json["Brand"] %></tr>

                <% end %>
            </table>
        <% else %>
            <% if params['sku'] == nil %>
            <h1>Type to begin search</h1>
            <% elsif  params['sku'] == ""  %>
            <h1>Search field empty</h1>
            <span>Please, actually type something this time.</span>
        <% else %>

            <h1>Error</h1>
            <span>No results found</span>
            <% end %>

            <% end %>
        </div>
    </div>
