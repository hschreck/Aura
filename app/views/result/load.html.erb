<% @title="Results"; @style="results" %>

<% if @error == nil && @data != nil %>
<div class="inner-wrapper">
    <div class="barcode-banner">

        <div class="barcode">

            <%= @barcodeImage %>
            <br>

            <%= params['sku'] %>
        </div>

    </div>
    <table class='results_properties'>
        <% @editlist = ["category", "sku", "condition_reason", "Condition"] %>
        <% @noShow = ["controller", "action", "commit", "utf8", "authenticity_token"] %>
        <% if !@data.instance_of?(String) %>
        <% @data.each do |key, value| %>
        <% if @editlist.include?(key); key = key.titleize; end%>
        <% if @editlist.include?(key); value = value.titleize; end%>
        <% if value == "on"; value = "Yes"; end; if value == "off"; value = "No"; end; %>
        <% key.tr('_', '') %>
        <% if !@noShow.include?(key)%>
        <% if value.blank?; value = "Not provided"; end %>
        <tr>
            <td class="property_name"><%= key %></td>
            <td><%= value %></td>
        </tr>
        <% end %>
        <% end %>
    </table>
</div>

<% else %>
<p><%= @data %>
    <%= params['sku'] %></p>
<% end %>

<% else %>

<h1>Error</h1>
<%= @error %>

<% end %>
